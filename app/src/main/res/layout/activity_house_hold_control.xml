<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aigo.kt03.ui.activity.HouseHoldControlActivity">

    <TextView
        android:id="@+id/tv_connect_status"
        android:text="kt03在线"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_add_household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加电器" />

        <Button
            android:id="@+id/btn_get_household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取电器" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        >

        <EditText
            android:id="@+id/et_query_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="id" />

        <Button
            android:id="@+id/btn_query_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根据id获取电器" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        >

        <EditText
            android:id="@+id/et_delete_device_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="id" />

        <Button
            android:id="@+id/btn_delete_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根据id删除电器" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        >

        <EditText
            android:id="@+id/et_update_device_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="id" />

        <Button
            android:id="@+id/btn_update_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根据id修改电器名称" />

    </LinearLayout>

</LinearLayout>
