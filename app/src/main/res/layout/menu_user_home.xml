<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lv_2_weather_menu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/drw_2_weather_popup_window_bg"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_home_menu_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"

            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
               />

            <TextView
                android:id="@+id/tv_update_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="修改密码"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a7a7a7" />

        <LinearLayout
            android:id="@+id/user_home_menu_change_info"
            android:layout_width="match_parent"
            android:layout_height="46dp"

            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
              />

            <TextView
                android:id="@+id/tv_update_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="修改信息"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a7a7a7" />

        <LinearLayout
            android:id="@+id/user_home_menu_logout"
            android:layout_width="match_parent"
            android:layout_height="46dp"

            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_unlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="退出登录"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>