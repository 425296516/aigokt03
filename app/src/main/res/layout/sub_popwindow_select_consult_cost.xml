<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:background="@drawable/drw_2_weather_popup_window_bg"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="200dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="咨询费用"
        android:textSize="22sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"

        />


    <EditText
        android:id="@+id/et_custom_cost"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:hint="请输入咨询费用"/>

    <LinearLayout
        android:id="@+id/rl__save_consult_cost"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_save_consult_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:text="取消"
            android:textColor="#fff"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_save_consult_cost"
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:layout_marginLeft="30dp"
            android:text="确定"

            android:textColor="#fff"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>